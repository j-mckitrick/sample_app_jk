= set_header_tab("account")

.errors
  = display_flash_messages(flash)

%section.container-wrapper
  .container.sign-up
    %h1="SIGN UP FOR YOUR ACCOUNT"
    %p
      Welcome to GROUNDFLOOR. Complete the information below to create your account. 
      %a{onclick: "gotoAnchor('#storybd');"}
      Will GROUNDFLOOR work for you?
    
    .row.padded
      .col-lg-12
        = render "devise/registrations/create_developer_account", resource: resource
          
